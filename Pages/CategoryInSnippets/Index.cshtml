@model DoItInCpp.Pages.CategoryInSnippets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryInSnippet[0].Snippet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryInSnippet[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CategoryInSnippet) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Snippet.Name)
            </td>
